<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FF5722"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Digital Menu"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_done"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Item 1: Veg Burger -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:id="@+id/tv_name1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Veg Burger" android:textSize="18sp" android:textStyle="bold"/>
                    <TextView android:layout_below="@id/tv_name1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₹50" android:textColor="#FF5722" android:textStyle="bold"/>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:gravity="center" android:orientation="horizontal">
                        <Button android:id="@+id/btn_minus1"  android:layout_width="44dp" android:layout_height="44dp" android:text="-" android:backgroundTint="#FF2222" android:textSize="12dp" android:textColor="@color/black" />
                        <TextView android:id="@+id/tv_qty1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginHorizontal="12dp" android:text="0" android:textSize="16sp" android:textStyle="bold"/>
                        <Button android:id="@+id/btn_plus1" android:layout_width="44dp" android:layout_height="44dp" android:text="+" android:backgroundTint="#4CAF50"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Item 2: Cheese Pizza -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:id="@+id/tv_name2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cheese Pizza" android:textSize="18sp" android:textStyle="bold"/>
                    <TextView android:layout_below="@id/tv_name2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₹120" android:textColor="#FF5722" android:textStyle="bold"/>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:gravity="center" android:orientation="horizontal">
                        <Button android:id="@+id/btn_minus2" android:layout_width="44dp" android:layout_height="44dp" android:text="-" android:backgroundTint="#FF5722"/>
                        <TextView android:id="@+id/tv_qty2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginHorizontal="12dp" android:text="0" android:textSize="16sp" android:textStyle="bold"/>
                        <Button android:id="@+id/btn_plus2" android:layout_width="44dp" android:layout_height="44dp" android:text="+" android:backgroundTint="#4CAF50"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Item 3: Paneer Sandwich -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:id="@+id/tv_name3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Paneer Sandwich" android:textSize="18sp" android:textStyle="bold"/>
                    <TextView android:layout_below="@id/tv_name3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₹80" android:textColor="#FF5722" android:textStyle="bold"/>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:gravity="center" android:orientation="horizontal">
                        <Button android:id="@+id/btn_minus3" android:layout_width="44dp" android:layout_height="44dp" android:text="-" android:backgroundTint="#FF5722"/>
                        <TextView android:id="@+id/tv_qty3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginHorizontal="12dp" android:text="0" android:textSize="16sp" android:textStyle="bold"/>
                        <Button android:id="@+id/btn_plus3" android:layout_width="44dp" android:layout_height="44dp" android:text="+" android:backgroundTint="#4CAF50"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Item 4: French Fries -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:id="@+id/tv_name4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="French Fries" android:textSize="18sp" android:textStyle="bold"/>
                    <TextView android:layout_below="@id/tv_name4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₹60" android:textColor="#FF5722" android:textStyle="bold"/>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:gravity="center" android:orientation="horizontal">
                        <Button android:id="@+id/btn_minus4" android:layout_width="44dp" android:layout_height="44dp" android:text="-" android:backgroundTint="#FF5722"/>
                        <TextView android:id="@+id/tv_qty4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginHorizontal="12dp" android:text="0" android:textSize="16sp" android:textStyle="bold"/>
                        <Button android:id="@+id/btn_plus4" android:layout_width="44dp" android:layout_height="44dp" android:text="+" android:backgroundTint="#4CAF50"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Item 5: Samosa -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:id="@+id/tv_name5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Samosa" android:textSize="18sp" android:textStyle="bold"/>
                    <TextView android:layout_below="@id/tv_name5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₹30" android:textColor="#FF5722" android:textStyle="bold"/>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:gravity="center" android:orientation="horizontal">
                        <Button android:id="@+id/btn_minus5" android:layout_width="44dp" android:layout_height="44dp" android:text="-" android:backgroundTint="#FF5722"/>
                        <TextView android:id="@+id/tv_qty5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginHorizontal="12dp" android:text="0" android:textSize="16sp" android:textStyle="bold"/>
                        <Button android:id="@+id/btn_plus5" android:layout_width="44dp" android:layout_height="44dp" android:text="+" android:backgroundTint="#4CAF50"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Item 6: Cold Coffee -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:id="@+id/tv_name6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cold Coffee" android:textSize="18sp" android:textStyle="bold"/>
                    <TextView android:layout_below="@id/tv_name6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₹40" android:textColor="#FF5722" android:textStyle="bold"/>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:gravity="center" android:orientation="horizontal">
                        <Button android:id="@+id/btn_minus6" android:layout_width="44dp" android:layout_height="44dp" android:text="-" android:backgroundTint="#FF5722"/>
                        <TextView android:id="@+id/tv_qty6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginHorizontal="12dp" android:text="0" android:textSize="16sp" android:textStyle="bold"/>
                        <Button android:id="@+id/btn_plus6" android:layout_width="44dp" android:layout_height="44dp" android:text="+" android:backgroundTint="#4CAF50"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Item 7: Masala Tea -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:id="@+id/tv_name7" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Masala Tea" android:textSize="18sp" android:textStyle="bold"/>
                    <TextView android:layout_below="@id/tv_name7" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₹20" android:textColor="#FF5722" android:textStyle="bold"/>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:gravity="center" android:orientation="horizontal">
                        <Button android:id="@+id/btn_minus7" android:layout_width="44dp" android:layout_height="44dp" android:text="-" android:backgroundTint="#FF5722"/>
                        <TextView android:id="@+id/tv_qty7" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginHorizontal="12dp" android:text="0" android:textSize="16sp" android:textStyle="bold"/>
                        <Button android:id="@+id/btn_plus7" android:layout_width="44dp" android:layout_height="44dp" android:text="+" android:backgroundTint="#4CAF50"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Item 8: Hot Coffee -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:id="@+id/tv_name8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hot Coffee" android:textSize="18sp" android:textStyle="bold"/>
                    <TextView android:layout_below="@id/tv_name8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₹30" android:textColor="#FF5722" android:textStyle="bold"/>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:gravity="center" android:orientation="horizontal">
                        <Button android:id="@+id/btn_minus8" android:layout_width="44dp" android:layout_height="44dp" android:text="-" android:backgroundTint="#FF5722"/>
                        <TextView android:id="@+id/tv_qty8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginHorizontal="12dp" android:text="0" android:textSize="16sp" android:textStyle="bold"/>
                        <Button android:id="@+id/btn_plus8" android:layout_width="44dp" android:layout_height="44dp" android:text="+" android:backgroundTint="#4CAF50"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:backgroundTint="#FF5722"
        android:text="Done Order"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>